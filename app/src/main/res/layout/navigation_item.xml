<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_drawer_item_height"
    android:background="@drawable/navigation_item_ripple"
    android:clickable="true"
    android:orientation="horizontal">
    
    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="@dimen/nav_drawer_icon_size"
        android:layout_height="@dimen/nav_drawer_icon_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/nav_drawer_icon_margin"
        android:layout_marginRight="@dimen/nav_drawer_icon_margin"
        android:src="@mipmap/ic_action_home"
        android:contentDescription="User's profile image." />

    <TextView
        android:id="@+id/menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/nav_drawer_title_margin"
        android:layout_marginRight="@dimen/nav_drawer_icon_margin"
        android:text="Home" />


</RelativeLayout>