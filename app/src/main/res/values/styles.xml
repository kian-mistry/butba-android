<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <!-- Base Theme -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colourPrimary</item>
        <item name="colorPrimaryDark">@color/colourPrimaryDark</item>
        <item name="colorAccent">@color/colourAccent</item>
    </style>

    <!-- Toolbar Theme -->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <!--<item name="android:itemBackground">@color/blueGrey</item>-->
        <item name="android:textAppearanceListItem">@color/colourPrimaryText</item>
    </style>

    <!-- Tab Theme -->
    <style name="TabTheme" parent="Base.Widget.Design.TabLayout">
        <item name="android:layout_height">@dimen/tab_height</item>
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">@color/colourAccent</item>
        <item name="tabIndicatorHeight">@dimen/tab_indicator_height</item>
        <item name="tabPaddingStart">@dimen/tab_padding</item>
        <item name="tabPaddingEnd">@dimen/tab_padding</item>
        <item name="tabBackground">@color/colourPrimary</item>
        <item name="tabTextAppearance">@style/TabTextTheme</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <!-- Tab Text -->
    <style name="TabTextTheme" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/colourInactiveTab</item>
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="textAllCaps">true</item>
    </style>

    <!-- Divider -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@color/colourDividerDark</item>
    </style>

    <!-- Input Label -->
    <style name="InputLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:padding">@dimen/input_label_vertical_spacing</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
