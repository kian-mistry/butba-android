<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/committee_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="8dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/committee_image"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/committee_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/committee_image"
            android:layout_toStartOf="@id/committee_image"
            android:text="Position"
            android:fontFamily="sans-serif"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/committee_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/committee_position"
            android:text="Name: "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/committee_uni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/committee_name"
            android:layout_toLeftOf="@id/committee_image"
            android:layout_toStartOf="@id/committee_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:text="University: "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/committee_high_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/committee_uni"
            android:paddingRight="8dp"
            android:text="High Game: "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/committee_high_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/committee_high_game"
            android:paddingRight="8dp"
            android:text="High Series: "
            android:textSize="14sp" />

        <Button
            android:id="@+id/committee_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/committee_high_series"
            android:padding="8dp"
            android:text="Email"
            android:autoLink="email"
            style="@style/Base.Widget.AppCompat.Button.Borderless"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
