<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/committee_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/committee_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Chair"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/committee_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/committee_position"
            android:padding="5dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/committee_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/committee_position"
            android:layout_toRightOf="@id/committee_image"
            android:padding="2.5dp"
            android:text="Name: "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/committee_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/committee_name"
            android:layout_toRightOf="@id/committee_image"
            android:padding="2.5dp"
            android:text="Email: "
            android:textSize="14sp"
            android:autoLink="email"/>

        <TextView
            android:id="@+id/committee_uni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/committee_email"
            android:layout_toRightOf="@id/committee_image"
            android:padding="2.5dp"
            android:text="University: "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/committee_high_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/committee_uni"
            android:layout_toRightOf="@id/committee_image"
            android:padding="2.5dp"
            android:text="High Game: "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/committee_high_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/committee_high_game"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/committee_image"
            android:padding="2.5dp"
            android:text="High Series: "
            android:textSize="14sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
