<resources>
    <!-- Base Theme -->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
    <!-- Popup Theme -->
    <style name="PopupTheme" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:textColor">@color/colourPrimaryText</item>
        <item name="android:itemBackground">@android:color/white</item>
        <item name="android:colorControlActivated">@color/colourAccent</item>
        <item name="android:colorControlHighlight">@color/colourDivider</item>
        <item name="android:colorControlNormal">@color/colourInactiveTab</item>
    </style>
</resources>
